<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cnsnhanvien"
    android:padding="12dp"
    android:orientation="horizontal"

    android:background="@drawable/boder_login">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"

        android:layout_margin="12dp"
        >


        <TextView
            android:id="@+id/tvMaNV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="MaNV"
            android:textSize="18dp"
            android:textColor="#130f40"
            android:fontFamily="@font/poppinsmedium"/>

        <TextView
            android:id="@+id/tvTenNV"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Địa chỉ giao hàng"
            android:textSize="18dp"
            android:textColor="#130f40"
            android:fontFamily="@font/poppinsmedium" />

        <TextView
            android:id="@+id/tvNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhân viên quản lý"
            android:textSize="18dp"
            android:textColor="#130f40"
            android:fontFamily="@font/poppinsmedium" />

        <TextView
            android:id="@+id/tvSdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="SĐT"
            android:textSize="18dp"
            android:textColor="#130f40"
            android:fontFamily="@font/poppinsmedium" />


        <TextView
            android:id="@+id/tvLuong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Lương"
            android:textSize="18dp"
            android:textColor="#130f40"
            android:fontFamily="@font/poppinsmedium" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imgDelNV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:src="@drawable/delete" />
</LinearLayout>